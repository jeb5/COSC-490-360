{
	"configurations": [
		{
			"name": "Python Debug Angle Estimation",
			"type": "debugpy",
			"request": "launch",
			"program": "src/angle_estimation.py",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}",
			"args": [
				"input/synthetic.mkv",
				"input/synthetic.csv",
				"temp/test.csv",
				"--output_debug_video",
				"output/test.mp4",
				"--start_frame",
				"0",
				"--end_frame",
				"100"
			]
		},
		{
			"name": "Python Debug 360 Processing",
			"type": "debugpy",
			"request": "launch",
			"program": "src/360.py",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}",
			"args": ["output/balloon_test.mp4", "temp/balloon_test.csv", "output/balloon_test_mapped.mp4", "--scale", "0.25"]
		}
	]
}
